@model List<WebAppPRODUCTOS.Models.Producto>

@{
    ViewData["Title"] = "Home Page";
}

<div class=" jumbotron text-center bg-dark text-white" style="padding: 2%; background: rgb(2,0,36); background: linear-gradient(184deg, rgba(2,0,36,1) 22%, rgba(9,9,121,1) 52%, rgba(0,212,255,1) 97%); ">
    <h3 class="display-2">Productos</h3>

</div>

<div class="row jumbotron">
    <div class="col-md-6" style="margin: auto;">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="max-width: 60%; background-color: black; padding: 7%; margin: auto; justify-content: center; align-items: center;">
            <ol class="carousel-indicators">
                @for (int i = 0; i < Model.Count; i++)
                {
                    if (i == 0)
                    {
                        <li data-target="#carouselExampleControls" data-slide-to="i" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#carouselExampleControls" data-slide-to="@(i)"></li>
                    }
                }
            </ol>
            <div class="carousel-inner d" style=" margin-left: auto; margin-right: auto; display: block;">

                @{
                    var first = true;
                }
                @foreach (var item in Model)
                {

                    <div class="carousel-item @(first?Html.Raw("active"):Html.Raw(""))">
                        <a href="@Url.ActionLink("Details", "ProductosOK", new { id = item.Id })">
                            <img src="~/images/@item.imagen" class="img-thumbnail w-100"
                                 asp-append-version="true" />
                        </a>
                    </div>
                    first = false;
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
               data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button"
               data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <br />
    <div class="col-md-6" style="margin: auto;">
        <div class="bg-warning text-center" style="padding:3%">
            <h2>Productos Favoritos de los usuarios</h2>
        </div>
        <br />
        <div class="bg-dark text-justify text-white" style="padding:3%">
            <h5 class="text-white-50" style="padding:3%"><em>Al hacer click en la imagen del producto te brinda mayor detalles</em></h5>
            @foreach (var item in Model)
            {
        <p class="text-center "><strong> @item.nombres  </strong> a un módico precio de $ <strong>@item.precio </strong></p>
            }
        </div>
    </div>
</div>
<img class="img-fluid align-content-sm-center card-img h-25" style="margin: auto; padding" src="/propaganda/propaganda 2.jpg" alt="propaganda" />
